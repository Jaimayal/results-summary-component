---
import data from "../data.json";
import ResultsCard from "../components/ResultsCard.astro";
import Summary from "../components/Summary.astro";
---

<style is:global>
	*,
	*::after {
		padding: 0;
		margin: 0;
		box-sizing: inherit;
	}

	@font-face {
		font-family: "Hanken Grotesk";
		src: url("/fonts/HankenGrotesk.ttf") format("truetype");
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	html {
		box-sizing: border-box;
		font-size: 62.5%;
		font-family: "Hanken Grotesk", "Times New Roman";
	}
</style>

<style>
	.main-container {
		display: flex;
		background-color: rgb(238, 238, 238);
		flex-direction: column;
		width: 100%;
		height: 100vh;
		max-height: 100vh;
		align-items: center;
	}

	.attribution {
		font-size: 11px;
		text-align: center;
		display: flex;
		align-items: end;
		justify-content: center;
		flex-grow: 2;
	}

	.attribution__text {
		font-size: 1rem;
		align-self: end;
	}

	.attribution__text a {
		color: hsl(228, 45%, 44%);
	}

	.stats {
		display: flex;
		align-items: center;
		justify-content: center;
		min-height: 90%;
		flex-direction: row;
	}

	@media only screen and (max-width: 600px) {
		.stats {
			flex-direction: column;
			width: 100%;
			flex-grow: 1;
		}

		.attribution {
			flex-grow: 0;
		}
	}
</style>

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			rel="icon"
			type="image/png"
			sizes="32x32"
			href="./assets/images/favicon-32x32.png"
		/>

		<title>Frontend Mentor | Results summary component</title>
	</head>
	<body>
		<main class="main-container">
			<div class="stats">
				<ResultsCard score="76" percentile="65" />
				<Summary stats={data} />
			</div>
			<div class="attribution">
				<span class="attribution__text">
					Challenge by <a
						href="https://www.frontendmentor.io?ref=challenge"
						target="_blank">Frontend Mentor</a
					>. Coded by <a href="#">Jaime Ayala</a>.
				</span>
			</div>
		</main>
	</body>
</html>
